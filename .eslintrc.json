{
  "env": {
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-console": "error",
    "import/no-unresolved": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],  
        "alias": {
          "@": "./src"  
        },
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
